# /proc/last_kmsg
allow charger proc_last_kmsg:file { getattr open read };

allow charger device:dir { open read };

# /sys/class/power_supply/battery
allow charger sysfs_battery_writable:file { getattr open read };
allow charger sysfs_battery:file { getattr open read };

# /sys/devices/platform/battery/power_supply/ac/type
# /sys/devices/platform/battery/power_supply/ps/type
# /sys/devices/platform/battery/power_supply/usb/type
# /sys/devices/platform/battery/power_supply/wireless/type
allow charger sysfs_batteryinfo_charger_writable:file rw_file_perms;
